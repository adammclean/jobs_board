#jobs
	.job
		%h2= @job.title
		%p= @job.description
		%p= @job.company
		%p= @job.address
		%p= @job.url
		%button.btn.btn-default= link_to "Apply for Job", @job.url

/ Add Google API Map
#map

#links
	= link_to "Back", root_path, class: "btn btn-sm btn-default"
	= link_to "Edit", edit_job_path(@job), class: "btn btn-sm btn-default"
	= link_to "Delete", job_path(@job), class: "btn btn-sm btn-default"
/ method :delete, data: { confirm: "Are you sure you want to delete this job?" }
